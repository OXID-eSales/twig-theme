            <li><a href="{{ _cont.getLink()|raw }}">{{ _cont.oxcontents__oxtitle.value }}</a></li>
        {% endifcontent %}
        {% ifcontent ident "oxagb" set _cont %}
            <li><a href="{{ _cont.getLink()|raw }}">{{ _cont.oxcontents__oxtitle.value }}</a></li>
