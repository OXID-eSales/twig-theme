        {% endifcontent %}
        {% ifcontent ident "oxdeliveryinfo" set oCont %}
            <li><a href="{{ oCont.getLink()|raw }}">{{ oCont.oxcontents__oxtitle.value }}</a></li>
        {% endifcontent %}
        {% ifcontent ident "oxrightofwithdrawal" set oCont %}
            <li><a href="{{ oCont.getLink()|raw }}">{{ oCont.oxcontents__oxtitle.value }}</a></li>
        {% endifcontent %}
        {% ifcontent ident "oxorderinfo" set oCont %}
            <li><a href="{{ oCont.getLink()|raw }}">{{ oCont.oxcontents__oxtitle.value }}</a></li>
