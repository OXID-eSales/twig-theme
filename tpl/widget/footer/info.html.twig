            <li><a href="{{ oCont.getLink()|raw }}">{{ oCont.oxcontents__oxtitle.value }}</a></li>
        {% endifcontent %}
        {% if oViewConf.getViewThemeParam('blFooterShowNewsletter') %}
            <li><a href="{{ seo_url({ ident: oViewConf.getSelfLink()|cat("cl=newsletter") }) }}">{{ translate({ ident: "NEWSLETTER" }) }}</a></li>
        {% endif %}
    </ul>
{% endblock %}